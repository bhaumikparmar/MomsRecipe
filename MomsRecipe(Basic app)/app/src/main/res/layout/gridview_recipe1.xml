<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="393dp"
            android:layout_height="822dp"
            android:background="#0E0E0E"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9E767CA1"
                android:paddingTop="50dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="204dp"
                    android:layout_height="139dp"
                    android:layout_marginTop="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:srcCompat="@drawable/mexican_sandwich" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Maxicon Sandwich"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="191dp"
                    android:layout_height="139dp"
                    android:layout_marginTop="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:srcCompat="@drawable/dal_dhokli" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dal Dhokali"
                    android:textColor="#FBF9F9"
                    android:textSize="24sp"
                    app:layout_column="1"
                    app:layout_row="1" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="202dp"
                    android:layout_height="168dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_column="0"
                    app:layout_row="1"
                    app:srcCompat="@drawable/khandvi" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Khandvi"
                    android:textColor="#FAF8F8"
                    android:textSize="24sp"
                    app:layout_column="0"
                    app:layout_row="2" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="191dp"
                    android:layout_height="168dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_column="1"
                    app:layout_row="1"
                    app:srcCompat="@drawable/moong_dalwada" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="195dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="Moong Dalwada"
                    android:textColor="#FDFDFD"
                    android:textSize="24sp"
                    app:layout_column="1"
                    app:layout_row="2" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="202dp"
                    android:layout_height="130dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_column="0"
                    app:layout_row="3"
                    app:srcCompat="@drawable/kachori" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="202dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="Kachori"
                    android:textColor="#EFE7E7"
                    android:textSize="24sp"
                    app:layout_column="0"
                    app:layout_row="4" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="191dp"
                    android:layout_height="140dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_column="1"
                    app:layout_row="3"
                    app:srcCompat="@drawable/samosa_2_" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="191dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="Samosa"
                    android:textColor="#FFFCFC"
                    android:textSize="24sp"
                    app:layout_column="1"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="60dp"
                    android:paddingRight="16dp"
                    android:text="Back"
                    android:textSize="34sp"
                    app:backgroundTint="#1A1A1B"
                    app:layout_column="0"
                    app:layout_gravity="right"
                    app:layout_row="5" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingRight="16dp"
                    android:text="Next"
                    android:textSize="34sp"
                    app:backgroundTint="#1A1A1B"
                    app:layout_column="1"
                    app:layout_gravity="right"
                    app:layout_row="5" />
            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>