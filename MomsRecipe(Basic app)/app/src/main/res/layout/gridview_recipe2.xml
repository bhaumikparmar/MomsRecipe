<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="822dp"
        android:background="#0E0E0E"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9E767CA1"
            android:paddingTop="50dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="202dp"
                android:layout_height="139dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:srcCompat="@drawable/bread_pakoda" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bread Pakoda"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="181dp"
                android:layout_height="130dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/methi_thepla" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gujarati Thepla"
                android:textColor="#FBF9F9"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="202dp"
                android:layout_height="168dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/batata_vada" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Batata Vada"
                android:textColor="#FAF8F8"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="177dp"
                android:layout_height="165dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/dal_fry" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="195dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="Dal Fry"
                android:textColor="#FDFDFD"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="202dp"
                android:layout_height="130dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_column="0"
                app:layout_row="3"
                app:srcCompat="@drawable/guj_paatra" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="202dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="Gujarati Patra"
                android:textColor="#EFE7E7"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="4" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="177dp"
                android:layout_height="133dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_column="1"
                app:layout_row="3"
                app:srcCompat="@drawable/undhiyo" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="191dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Undhiyu"
                android:textColor="#FFFCFC"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="4" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:paddingRight="16dp"
                android:text="Back"
                android:textSize="34sp"
                app:backgroundTint="#1A1A1B"
                app:layout_column="1"
                app:layout_gravity="right"
                app:layout_row="5" />

        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>