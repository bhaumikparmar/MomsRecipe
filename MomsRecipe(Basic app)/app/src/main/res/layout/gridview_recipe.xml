<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="822dp"
        android:background="#0E0E0E"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9E767CA1"
            android:paddingTop="50dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="202dp"
                android:layout_height="130dp"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/aloo_tikki_latest__1_" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="196dp"
                android:layout_height="43dp"
                android:gravity="center"
                android:text="Aloo tikki"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="187dp"
                android:layout_height="123dp"
                android:layout_marginTop="50dp"
                android:paddingRight="10dp"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/khaman" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="200dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="Khaman Dhokla"
                android:textColor="#FBF9F9"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="168dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/bhel_puri" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:gravity="center"
                android:text="Bhel puri"
                android:textColor="#FAF8F8"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="191dp"
                android:layout_height="168dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/gujrati_handvo" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="195dp"
                android:layout_height="53dp"
                android:gravity="center"
                android:text="Gujrati Handvo"
                android:textColor="#FDFDFD"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="145dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_column="0"
                app:layout_row="3"
                app:srcCompat="@drawable/pasta" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="198dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="Pasta"
                android:textColor="#EFE7E7"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="4" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="189dp"
                android:layout_height="140dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_column="1"
                app:layout_row="3"
                app:srcCompat="@drawable/pani_puri_a_" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="191dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Pani Puri"
                android:textColor="#FFFCFC"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="4" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:paddingRight="16dp"
                android:text="Next"
                android:textSize="34sp"
                app:backgroundTint="#1A1A1B"
                app:layout_column="1"
                app:layout_gravity="right"
                app:layout_row="5" />

        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>